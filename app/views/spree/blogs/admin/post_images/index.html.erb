<%= render :partial => 'spree/blogs/admin/shared/post_tabs', :locals => {:current => "Images"} %>

<table class="index sortable" data-sortable-link="<%= update_positions_admin_post_images_url(@post) -%>">
  <thead>
    <tr>
      <th><%= t("thumbnail") %></th>
      <th><%= t("alt_text") %></th>
      <th class="actions"><%= t("action") %></th>
    </tr>
  </thead>
  <tbody>
    <% @post.images.each do |image| %>
      <tr id="<%= dom_id(image) %>" class="<%= cycle('odd', 'even') %>">
        <td><span class="handle">&nbsp;</span>&nbsp; <%= link_to(image_tag(image.attachment.url(:mini)), image.attachment.url(:large)) %></td>
        <td><%= image.alt %></td>
        <td class="actions align-center">
          <%= link_to_edit_url edit_admin_post_image_url(@post, image), no_text: true %>
          &nbsp;
          <%= link_to_delete image, {:url => admin_post_image_url(@post, image), no_text: true }%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div id="images"></div>
<br/>

<% content_for :page_actions do %>
  <li id="new_product_link">
    <%= button_link_to t("new_image"), new_admin_post_image_url(@post), :id => "new_image_link", icon: 'icon-plus' %>
  </li>
<% end %>

<% content_for :head do %>
  <script type="text/javascript">
    jQuery(document).ready(function(){

      jQuery('#new_image_link').click(function (event) {
        event.preventDefault();
        jQuery(this).hide();
        jQuery.ajax({type: 'GET', url: this.href, data: ({authenticity_token: AUTH_TOKEN}), success: function(r){ jQuery('#images').html(r);} });
      });

    });
  </script>
<% end %>
